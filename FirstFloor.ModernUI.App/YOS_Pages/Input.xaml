<UserControl x:Class="FirstFloor.ModernUI.App.Pages.LayoutTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="119*"/>
        </Grid.RowDefinitions>
        <mui:ModernTab SelectedSource="/YOS_Pages/Inputs/Person.xaml" Layout="Tab" Grid.RowSpan="2">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="강사" Source="/YOS_Pages/Inputs/Person.xaml" />
                <mui:Link DisplayName="강좌" Source="/Content/LoremIpsumSplit.xaml" />
                <mui:Link DisplayName="직원" Source="/Content/LoremIpsumList.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
